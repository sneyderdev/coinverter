---
import { BASE_URL } from "@/scripts/api";

import {
  Card,
  CardContent,
  CardDescription,
  CardFooter,
  CardHeader,
  CardTitle,
} from "@/components/ui/card";
import { Input } from "@/components/ui/input";
import { Label } from "@/components/ui/label";
import { CurrencySelect } from "./CurrencySelect";

import type { CurrenciesResponse, ConverterResponse, Converter } from "@/types";

const converterResponse = await fetch(
  `${BASE_URL}/latest?api_key=${import.meta.env.PUBLIC_API_KEY}&symbols=COP`
);

const data = (await converterResponse.json()) as ConverterResponse;

const converter: Converter = {
  base: data.response.base,
  symbol: {
    code: "COP",
    rate: data.response.rates["COP"],
  },
  date: data.response.date,
};

const currenciesResponse = await fetch(
  `${BASE_URL}/currencies?api_key=${import.meta.env.PUBLIC_API_KEY}&type=fiat`
);

const currencies = (await currenciesResponse.json()) as CurrenciesResponse;
---

<Card>
  <CardHeader>
    <CardTitle>Converter</CardTitle>
    <CardDescription>Convert between currencies.</CardDescription>
  </CardHeader>
  <CardContent id="converter" data-data={JSON.stringify(converter)}>
    <div class="grid gap-y-4">
      <div class="grid w-full items-center gap-1.5">
        <Label htmlFor="amount">Amount</Label>
        <div class="flex flex-col gap-2 sm:flex-row">
          <Input type="number" id="amount" min="0" />
          <CurrencySelect
            id="base"
            currencies={currencies.response}
            client:only="react"
          />
        </div>
      </div>
      <div class="grid w-full items-center gap-1.5">
        <Label htmlFor="converted_to">Converted to</Label>
        <div class="flex flex-col gap-2 sm:flex-row">
          <Input type="number" id="converted_to" min="0" />
          <CurrencySelect
            id="symbol"
            currencies={currencies.response}
            client:only="react"
          />
        </div>
      </div>
    </div>
  </CardContent>
  <CardFooter className="grid text-xs">
    <span id="exchange_rate"></span>
    <span id="updated_date"></span>
  </CardFooter>
</Card>

<script src="../scripts/converter.ts"></script>
